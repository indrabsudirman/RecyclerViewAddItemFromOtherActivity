<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noMurojaah"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="1"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/namaSurat"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@id/noMurojaah"
        app:layout_constraintTop_toBottomOf="@id/noMurojaah"
        app:layout_constraintBottom_toBottomOf="@id/noMurojaah"
        app:layout_constraintEnd_toEndOf="@id/noMurojaah"
        android:text="Al-Fatihah"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/halamanSurat"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@id/namaSurat"
        app:layout_constraintTop_toBottomOf="@id/namaSurat"
        app:layout_constraintBottom_toBottomOf="@id/namaSurat"
        app:layout_constraintEnd_toEndOf="@id/namaSurat"
        android:text="1 - 7"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>